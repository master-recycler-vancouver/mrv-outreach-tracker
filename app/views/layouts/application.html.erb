<!DOCTYPE html>
<html>
  <head>
    <title>Master Recycler Vancouver Outreach Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: "shared/navbar" %>
    <%= render partial: "shared/subnav" %>

    <div class="container is-small">
      <div>
        <% flash.each do |k,v| %>
          <div class=" <%= k %>"><%= v %></div>
        <% end unless flash.empty? %>
      </div>

      <h2 class="title">
        <%= yield :page_header %>
        <div class="title-action">
          <%= yield :page_header_action %>
        </div>
      </h2>

      <%= yield %>
    </div>
  </body>
</html>