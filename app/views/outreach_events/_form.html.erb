<%= form_for @outreach_event do |form| %>
 
  <% if @outreach_event.errors.any? %>
    <% #TODO %>
  <% end %>
 
  <div class="field">
    <%= form.label :start_time, class: "label" %>
    <div clas="control">
      <%= form.datetime_field :start_time, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :end_time, class: "label" %>
    <div clas="control">
      <%= form.datetime_field :end_time, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description, class: "label" %>
    <div clas="control">
      <%= form.text_area :description, class: "textarea" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :duration_in_minutes, class: "label" %>
    <div clas="control">
      <%= form.number_field :duration_in_minutes, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :people_reached, class: "label" %>
    <div clas="control">
      <%= form.number_field :people_reached, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :notes, class: "label" %>
    <div clas="control">
      <%= form.text_area :notes, class: "textarea" %>
    </div>
  </div>
 
  <div class="control">
    <%= form.submit class: "button is-primary" %>
  </div>
 
<% end %>