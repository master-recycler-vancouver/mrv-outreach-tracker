<% content_for :page_header do %>
  Outreach Events
<% end %>

<% content_for :page_header_action do %>
  <%= link_to 'New Outreach Event', new_outreach_event_path, class: "button is-primary" %>
<% end %>

<h4 class="heading is-inline-block">Total Hours</h4>
<div class="pill"><%= @outreach_events.sum(:duration_in_minutes) / 60.0 %></div>

<table class="table is-fullwidth is-striped is-hoverable">
  <thead class="thead">
    <tr class="tr">
      <th class="th">Start Time</th>
      <th class="th">End Time</th>
      <th class="th">Description</th>
      <th class="th">Duration in minutes</th>
      <th class="th" colspan="3"></th>
    </tr>
  </thead>
  
  <tbody class="tbody">
    <% @outreach_events.each do |outreach_event| %>
      <tr class="tr">
        <td class="td"><%= outreach_event.start_time %></td>
        <td class="td"><%= outreach_event.end_time %></td>
        <td class="td"><%= outreach_event.description %></td>
        <td class="td"><%= outreach_event.duration_in_minutes %></td>
        <td class="td"><%= link_to 'Show', outreach_event_path(outreach_event) %></td>
        <td class="td"><%= link_to 'Edit', edit_outreach_event_path(outreach_event) %></td>
        <td class="td"><%= link_to 'Delete', outreach_event_path(outreach_event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
