<h1>Outreach Events</h1>

<p>
  <%= link_to 'Home', root_path %>
</p>

<p>
  <strong>Total Hours</strong> <%= @outreach_events.sum(:duration_in_minutes) / 60.0 %>
</p>

<p>
  <%= link_to 'New Outreach Event', new_outreach_event_path %>
</p>
 
<table>
  <tr>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Description</th>
    <th>Duration in minutes</th>
    <th colspan="3"></th>
  </tr>
 
  <% @outreach_events.each do |outreach_event| %>
    <tr>
      <td><%= outreach_event.start_time %></td>
      <td><%= outreach_event.end_time %></td>
      <td><%= outreach_event.description %></td>
      <td><%= outreach_event.duration_in_minutes %></td>
      <td><%= link_to 'Show', outreach_event_path(outreach_event) %></td>
      <td><%= link_to 'Edit', edit_outreach_event_path(outreach_event) %></td>
      <td><%= link_to 'Delete', outreach_event_path(outreach_event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
